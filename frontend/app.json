{
  "expo": {
    "name": "Cancha a la Vista",
    "slug": "cancha-a-la-vista",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0da6f2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.canchalavista.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0da6f2"
      },
      "package": "com.canchalavista.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permite a Cancha a la Vista acceder a tu ubicación para encontrar canchas cercanas."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite a Cancha a la Vista acceder a tus fotos para subir imágenes de tus canchas."
        }
      ]
    ]
  }
}
